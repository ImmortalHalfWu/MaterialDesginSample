<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>
    <!--<item name="android:statusBarColor">?attr/colorPrimaryDark</item>-->
    <style name="AppTheme.NoActionBar.StatusBarTestActivity">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:navigationBarColor">@color/colorTransparent</item>
    </style>

    <style name="AppTheme.NoActionBar.ScrolingActivity2">
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>
